- (void)doneLoadingHeaderTableViewData{
	
	[_customRefreshControl refreshScrollViewDataSourceDidFinishedHeaderLoading:self.tableView];
}

- (void)refreshTableHeaderDidTriggerRefresh:(CustomRefreshControl*)view {
    //发送刷新请求
    //    [self performSelector:@selector(doneLoadingHeaderTableViewData) withObject:nil afterDelay:2];
}

- (NSDate*)refreshTableHeaderDataSourceLastUpdated:(CustomRefreshControl*)view {
    
    return [NSDate date];
}



//自动加载完毕后,tableView复位
- (void)doneLoadingAutoFooterTableViewData {
    
    self.tableView.tableFooterView = nil;
    
    _isAutoFooterLoading = NO;
}

@end
