#import "CustomRefreshTableViewController.h"

@interface CustomRefreshTableViewController () {
    
    BOOL                        _isAutoFooterLoading;
    
    UIView                      *_autoFooterloadingView;
}

- (void)autoFooterLoading;

@end

@implementation CustomRefreshTableViewController

- (id)initWithStyle:(UITableViewStyle)style
{
    self = [super initWithStyle:style];
    if (self) {
        // Custom initialization
        
        _isAllowAutoFooterLoading = NO;
        _isAutoFooterLoading = NO;
    }
    return self;
}

